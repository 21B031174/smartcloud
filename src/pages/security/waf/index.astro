---
import AboutSection from "@/components/shared/AboutSection.astro";
import AdvantageCard from "@/components/shared/AdvantageCard.astro";
import AdvantageCardWithIcon from "@/components/shared/AdvantageCardWithIcon.astro";
import Layout from "@/layouts/Layout.astro";
import { wafAdvantages, wafAdvantages2, wafUseCases } from "@/lib/data/wafData";
import Container from "@/widgets/Container.astro";
import Hero from "@/widgets/Hero.astro";

import wafImg from "@/assets/waf.svg";
import IaasUseCaseCard from "@/components/cloud-services/iaas/IaasUseCaseCard.astro";
import WafAccodtion from "@/widgets/security/waf/WafAccodtion.astro";
import { getTranslations } from "@/utils/i18n";
import Text from "@/components/ui/Text.astro";

const seoData = {
  title: "WAF (Web Application Firewall) – Защита веб-приложений",
  description:
    "Облачный WAF – защита сайтов и веб-приложений от атак SQL-инъекций, XSS и других угроз. Обеспечьте безопасность вашего бизнеса.",
  descriptionUz:
    "Bulutli WAF – SQL-in'ektsiyalar va zararli trafikdan himoya. Sayt va ilovalar xavfsizligi uchun samarali yechim.",
  keywords:
    "WAF, Web Application Firewall, защита сайтов, кибербезопасность, SmartCloud",
  keywordsUz:
    "WAF, Web Application Firewall, veb xavfsizligi, kiberxavfsizlik, SmartCloud",
  url: "https://smartcloud.uz/cloud-services/waf/",
  image: "https://smartcloud.uz/assets/waf.svg",
  author: "SmartCloud",
};

const locale = Astro.url.pathname.startsWith("/uz") ? "uz" : "ru";
const t = getTranslations(locale, "WAF");
---

<Layout {...seoData}>
  <Container>
    <Hero imgSrc={wafImg}>
      <Text text={t.title} type="highlight" />

      <p class="text-medium mt-4">{t.description}</p>
    </Hero>

    <AboutSection title="Наше уникальное предложение">
      Обеспечьте всестороннюю защиту вашего веб-приложения от широкого спектра
      угроз с помощью нашего WAF. Наша система работает на уровне приложений,
      анализируя весь трафик и блокируя опасные запросы еще до того, как они
      достигнут вашего сервера. Гибкая настройка политик позволяет адаптировать
      защиту под ваши уникальные потребности
    </AboutSection>

    <AdvantageCard
      title="Надежная Защита Веб-приложений с WAF"
      dataArray={wafAdvantages}
      cardClassName="mt-0"
    />

    <section class="my-dynamic">
      <h1 class="text-extra-large font-medium text-center mb-dynamic">
        Cферы применения WAF
      </h1>

      <div class="grid lg:grid-cols-3 gap-dynamic10">
        {
          wafUseCases.map((item) => (
            <IaasUseCaseCard
              title={item.title}
              description={item.description}
            />
          ))
        }
      </div>
    </section>
  </Container>

  <AdvantageCardWithIcon
    title="Что вы получаете с этой услугой?"
    data={wafAdvantages2}
  />

  <Container>
    <WafAccodtion />
  </Container>
</Layout>
