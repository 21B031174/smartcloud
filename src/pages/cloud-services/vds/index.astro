---
import AboutSection from "@/components/shared/AboutSection.astro";
import AdvantageCard from "@/components/shared/AdvantageCard.astro";
import Layout from "@/layouts/Layout.astro";
import VdsCards from "@/widgets/cloud-services/vds/VdsCards";
import Hero from "@/widgets/Hero.astro";

import vdsImg from "@/assets/vds.svg";
import {
  operatingSystems,
  vdsAdvantages,
  operatingSystemsWithProgram,
} from "@/lib/data/vdsData";
import TabNavigation from "@/widgets/cloud-services/vds/TabNavigation";
import { MoveRight } from "lucide-react";
import TrialSection from "@/widgets/TrialSection.astro";

const seoData = {
  title: "VDS (VPS) в Узбекистане – Виртуальные серверы SmartCloud",
  description:
    "Виртуальные выделенные серверы (VDS/VPS) с высокой производительностью и SSD-накопителями. Оптимальное облачное решение для бизнеса.",
  descriptionUz:
    "VDS (VPS) – yuqori unumdorlikka ega virtual serverlar. SSD xotira bilan mustahkam bulutli yechim.",
  keywords:
    "VDS, VPS, виртуальные серверы, хостинг, облачные серверы, SmartCloud, аренда сервера, Linux, Windows",
  keywordsUz:
    "VDS, VPS, virtual serverlar, hosting, bulut serverlari, SmartCloud, Linux, Windows",
  url: "https://smartcloud.uz/cloud-services/vds/",
  image: "https://smartcloud.uz/assets/vds.svg",
  author: "SmartCloud",
};
---

<Layout {...seoData}>
  <Hero imgSrc={vdsImg}>
    <div>
      <a
        href="https://portal.smartcloud.uz/index.php?/cart/vds-ssd-/"
        class="group inline-block"
        target="_blank"
      >
        <div
          class="p-2 px-6 bg-secondary/10 flex items-center gap-2 hover:bg-secondary/50 rounded-md text-regular"
        >
          10 дней бесплатного доступа к мощной облачной инфраструктуре
          <MoveRight className="group-hover:translate-x-2 transition-all" />
        </div>
      </a>
      <h1 class="text-dynamic font-medium leading-none mt-10"> 
        <span class="text-secondary">Virtual Dedicated Server</span> – виртуальный
        выделенный сервер
      </h1>
      <p class="text-medium mt-6">
        Получите полный контроль над сервером, изолированную инфраструктуру и
        <br />
        поддержку 24/7. Экономьте на оборудовании и управляйте своим сервером удаленно.
        <br />
        Надежность, скорость и безопасность для вашего проекта!
      </p>
    </div>
  </Hero>

  <AboutSection title="Возможности VDS">
    <p>
      VDS справляется с разными задачами – от хостинга сайтов-визиток до
      размещения веб-порталов, требующих значительных технических ресурсов.
      Благодаря гибкости масштабирования VDS позволяет строить IТ-инфраструктуру
      быстро и экономично, что подходит для крупных компаний, стартапов,
      разработчиков, DevOps-инженеров
    </p>
  </AboutSection>

  <TabNavigation
    operatingSystems={operatingSystems}
    operatingSystemsWithProgram={operatingSystemsWithProgram}
    client:idle
  />

  <VdsCards client:idle />

  <AdvantageCard
    title="Преимущества VDS"
    data={vdsAdvantages}
    cardClassName="lg:grid-cols-3"
  />
  <TrialSection days={10} />
</Layout>
