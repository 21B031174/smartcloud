---
import Layout from "@/layouts/Layout.astro";
import IaaSConfigurator from "@/widgets/cloud-services/iaas/IaaSConfigurator";
import Hero from "@/widgets/Hero.astro";
import AboutSection from "@/components/shared/AboutSection.astro";

import iaasImg from "@/assets/iaas.png";
import { iaas_advantages, iaas_advantages_2 } from "@/lib/data/iaasData";
import IaasCard from "@/components/cloud-services/iaas/IaasCard.astro";
import IaasUseCaseCard from "@/components/cloud-services/iaas/IaasUseCaseCard.astro";
import AdvantageCard from "@/components/shared/AdvantageCard.astro";
import { smartcloudAdvantages } from "@/lib/data/homeData";
import TrialSection from "@/widgets/TrialSection.astro";
import { MoveRight } from "lucide-react";

const seoData = {
  title: "IaaS в Узбекистане – Виртуальная инфраструктура от SmartCloud",
  description:
    "IaaS – масштабируемые облачные ресурсы для бизнеса в Узбекистане. Гибкое управление серверами, высокая производительность, надежность.",
  descriptionUz:
    "IaaS – Oʻzbekistonda bulutli infratuzilma. Moslashuvchan server boshqaruvi, yuqori samaradorlik va ishonchlilik.",
  keywords:
    "IaaS, облачная инфраструктура, серверы, виртуальные машины, SmartCloud, облачные технологии, инфраструктура как услуга",
  keywordsUz:
    "IaaS, bulut infratuzilmasi, serverlar, virtual mashinalar, SmartCloud, bulut texnologiyalari",
  url: "https://smartcloud.uz/cloud-services/iaas/",
  image: "https://smartcloud.uz/assets/iaas.svg",
  author: "SmartCloud",
};
---

<Layout {...seoData}>
  <Hero imgSrc={iaasImg}>
    <div>
      <a
        href="https://portal.smartcloud.uz/index.php?/cart/iaas-ssd/"
        class="group inline-block"
        target="_blank"
      >
        <div
          class="p-2 px-6 bg-secondary/10 flex items-center gap-2 hover:bg-secondary/50 rounded-md text-regular"
        >
          14 дней бесплатного доступа к мощной облачной инфраструктуре
          <MoveRight className="group-hover:translate-x-2 transition-all" />
        </div>
      </a>
      <h1 class="text-dynamic font-medium leading-none mt-10"> 
        <span class="text-secondary">IaaS</span> (инфраструктура как услуга)
      </h1>
      <p class="text-medium mt-4">
        Бизнес-модель, позволяющая в облачной среде самостоятельно создавать и
        клонировать виртуальные серверы, менять их конфигурацию, управлять
        настройками
      </p>
    </div>
  </Hero>

  <AboutSection title="Что такое IaaS?">
    <p>
      IaaS (инфраструктура как услуга) – это гибкое облачное решение, которое
      позволяет самостоятельно создавать и клонировать виртуальные сервера,
      менять их конфигурацию, а также управлять настройками
    </p>
  </AboutSection>

  <div class="my-dynamic">
    <h1 class="text-extra-large font-medium text-center mb-dynamic">
      IaaS vs собственная инфраструктура: в чем выгода?
    </h1>
    <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-10">
      {
        iaas_advantages_2.map((item) => (
          <IaasCard title={item.title} Icon={item.icon} />
        ))
      }
    </div>
  </div>

  <IaaSConfigurator client:idle />

  <h1 class="text-extra-large font-medium text-center mb-dynamic">
    Сценарии использования IaaS
  </h1>

  <div class="grid md:grid-cols-2 gap-dynamic10">
    {iaas_advantages.map((item) => <IaasUseCaseCard title={item} />)}
  </div>
  <AdvantageCard
    title="Преимущества IaaS SmartCloud"
    dataArray={smartcloudAdvantages}
    cardClassName="xl:grid-cols-3"
  />
  <TrialSection days={14} />
</Layout>
