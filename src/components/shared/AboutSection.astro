---
import clsx from "clsx";

interface Props {
  title: string;
  className?: string;
}

const { title, className } = Astro.props;
---

<div class={clsx("grid md:grid-cols-6 gap-10", className)}>
  <h2 class="md:col-span-2 text-2xl md:text-4xl font-medium">{title}</h2>
  <div class="md:col-span-4 text-md mt-10 md:text-2xl md:mt-0">
    <slot />
  </div>
</div>
