---
import clsx from "clsx";

interface Props {
  title: string;
  className?: string;
}

const { title, className } = Astro.props;
---

<div
  class={clsx("grid md:grid-cols-6 gap-10", className)}
  id="aboutSectionContainer"
>
  <h2
    class="md:col-span-2 text-2xl md:text-4xl font-medium"
    id="aboutSectionTitle"
  >
    {title}
  </h2>
  <div
    class="md:col-span-4 text-md mt-10 md:text-2xl md:mt-0"
    id="aboutSectionChildren"
  >
    <slot />
  </div>
</div>

<script>
  import { gsapTrigger } from "@/lib/gsapTrigger";

  document.addEventListener("DOMContentLoaded", () => {
    const aboutSectionContainer = document.getElementById(
      "aboutSectionContainer"
    );
    const aboutSectionTitle = document.getElementById("aboutSectionTitle");
    const aboutSectionChildren = document.getElementById(
      "aboutSectionChildren"
    );

    if (aboutSectionContainer) {
      const tl = gsapTrigger(aboutSectionContainer);
      tl.fromTo(
        aboutSectionTitle,
        { y: 50, opacity: 0 },
        { y: 0, opacity: 1, duration: 0.5 }
      ).fromTo(
        aboutSectionChildren,
        { y: 50, opacity: 0 },
        { y: 0, opacity: 1, duration: 0.5 },
        "<"
      );
    }
  });
</script>
